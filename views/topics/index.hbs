{{#extend "layout"}}

{{#content "body" mode="append"}} 
<h2>List Topic</h2>
<a href="/topics/create" class="btn btn-primary"> <i class="fa fa-plus"></i> New Topic</a>
<br>
<table class="table table-bordered"><br>
   
    <tr>
        <th>Topic ID</th>
        <th>Topic Name</th>
        <th>Topic Description</th>
        <th>Topic Summary</th>
        <th>Slot</th>
        <th>Status</th>
        <th></th>
    </tr>
    {{#each topics}}
    <tr>
        <td>{{id}}</td>
        <td class="">{{topic_name}}</td>
        <td class="break-word">{{topic_description}}</td>
        <td class="break-word">{{topic_summary}}</td>
        <td >{{slot}}</td>
        <td>{{is_active}}</td>
        <td>    
            <center>
                <a href="/topics/detail?id={{id}}"><i class="far fa-eye"></i></a>&nbsp;&nbsp;
                <a href="/topics/delete?id={{id}}" onclick="confirm('Delete?')"><i class="far fa-trash"></i></a>&nbsp;&nbsp;
                <a href="/topics/update?id={{id}}"><i class="far fa-pen"></i></a>&nbsp;&nbsp;
            </center>             
        </td>
    </tr>

    {{/each}}
</table>
{{/content}}
{{/extend}}
