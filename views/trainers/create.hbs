{{#extend "layout"}}
    
    {{#content "body" mode="append"}}

    <h2>Add New Trainer</h2>

        <form action="/trainers/create" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="">First Name</label>
                <input type="text" name="trainer_firstname" id="" class="form-control">
            </div>
            <div class="mb-3">
                <label for="">Last Name</label>
                <input type="text" name="trainer_lastname" id="" class="form-control">
            </div>
               <div class="mb-3">
                <label for="">Email</label>
                <input type="text" name="trainer_email" id="" class="form-control">
            </div>
             <div class="mb-3">
                <label for="">Phone number</label>
                <input type="text" name="trainer_phone" id="" class="form-control">
            </div>
            <div class="mb-3">
                <label for="">Address</label>
                <input type="text" name="trainer_address" id="" class="form-control">
            </div>
               <div class="mb-3">
                <label for="">Password</label>
                <input type="text" name="password" id="" class="form-control">
            </div>
            <div class="mb-3">
                <label for="">Avatar</label>
                <input type="file" name="avatar" id="" class="form-control">
            </div>
            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary">
                <input type="reset" value="Reset" class="btn btn-danger">
            </div>
        </form>
    {{/content}}
{{/extend}}
