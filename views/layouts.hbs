        </div>
        <div class="col-xl-11 col-md-10 col-sm-12">
            <div class="content">
                {{#block "body"}}
                        
                {{/block}}
            </div>
        </div>
    </div>
    <div class="bg-dark footer " role="contentinfo">
        {{#block "footer"}}
        <small>&copy; day la footer</small>
