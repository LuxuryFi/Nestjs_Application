{{#extend "layout"}}

    {{#content "body"}}
        <h2>Create New Staff</h2>

        <form action="/staffs/create"  method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="">First Name</label>
                <input type="text" name="staff_firstname" id="" class="form-control">
            </div>
             <div class="mb-3">
                <label for="">Last Name</label>
                <input type="text" name="staff_lastname" id="" class="form-control">
            </div>
             <div class="mb-3">
                <label for="">Email</label>
                <input type="text" name="staff_email" id="" class="form-control">
            </div>
             <div class="mb-3">
                <label for="">Phone</label>
                <input type="text" name="staff_phone" id="" class="form-control">
            </div>
             <div class="mb-3">
                <label for="">Address</label>
                <input type="text" name="staff_address" id="" class="form-control">
            </div>
             <div class="mb-3">
                <label for="">Password</label>
                <input type="text" name="password" id="" class="form-control">
            </div>
             <div class="mb-3">
                <label for="">Avatar</label>
                <input type="file" name="avatar" id="" class="form-control">
            </div>
             <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary">
                <input type="reset" value="Reset" class="btn btn-danger">
            </div>
        </form>


    {{/content}}

{{/extend}}
