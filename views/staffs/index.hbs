{{#extend "layout"}}
    {{#content "body"}}
    <h2>List Staff</h2>
     
     <a href="/staffs/create" class="btn btn-primary"> <i class="fa fa-plus"></i> New Staff</a><br>

    <table class=" table table-bordered">
        <tr class="thead-dark">
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Avatar</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th></th>
        </tr>

        {{#each staffs}}
            <tr>
                <td>{{{id}}}</td>
                <td>{{{staff_firstname}}}</td>
                <td>{{{staff_lastname}}}</td>
                <td> <img width="200px" src="/uploads/staffs/{{{avatar}}}" alt=""></td>
                <td>{{{staff_email}}}</td>
                <td>{{{staff_phone}}}</td>
                <td>{{{staff_address}}}</td>
                <td>
                     <center>
                        <a href="/staffs/detail?id={{id}}"><i class="far fa-eye"></i></a>&nbsp;&nbsp;
                        <a href="/staffs/delete?id={{id}}" onclick="confirm('Delete?')"><i class="far fa-trash"></i></a>&nbsp;&nbsp;
                        <a href="/staffs/update?id={{id}}"><i class="far fa-pen"></i></a>&nbsp;&nbsp;
                     </center>
                </td>
            </tr>

        {{/each}}
        
    </table>

    {{/content}}
{{/extend}}
