{{#extend "index"}}

{{#content "header" mode="append"}}
<link rel="stylesheet" href="/css/profileStyle.css">

{{/content}}


{{#content "body" mode="append"}}
<br><br><br><br><br>
    <div class="profile-container">
        <form action="homepage/profile" method="POST">
            <div class="pro-left">
                <img src="/uploads/trainers/{{user.avatar}}" alt="Avatar" class="avt-user">
                <input type="file" name="file" id="file">
                <table class="tb-status">
                    <tbody>
                        <tr>
                            <td class="">Status</td>
                            <td class="txt-r">Active</td>
                        </tr>
                        <tr>
                            <td>User Rating</td>
                            <td class="txt-r">
                                <i class="ti-star"></i>
                                <i class="ti-star"></i>
                                <i class="ti-star"></i>
                                <i class="ti-star"></i>
                                <i class="ti-star"></i>
                            </td>
                        </tr>
                        <tr>
                            <td>Member Since</td>
                            <td class="txt-r">Feb 28, 2021</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="pro-right">
                <div class="profile-title fs-20px">
                    <h2><span class="fw-nor">Profile: </span></h2>
                </div>
                <div class="form-input">
                    <label class="form-lb" for="id">ID</label>
                    <input type="text" class="form-txt" name="id" id="" value="{{user.id}}" disabled>
                </div>
                <div class="form-input">
                    <label class="form-lb" for="fname">First Name</label>
                    <input type="text" class="form-txt" name="fname" id="" disabled value="{{user.trainer_firstname}}" placeholder=" first name">
                </div>
                <div class="form-input">
                    <label class="form-lb" for="lname">Last Name</label>
                    <input type="text" class="form-txt" name="lname" id="" disabled value="{{user.trainer_lastname}}" placeholder=" last name">
                </div>
                <div class="form-input">
                    <label class="form-lb" for="email">Email</label>
                    <input type="email" class="form-txt" name="email" id="" disabled value="{{user.trainer_email}}" placeholder=" email">
                </div>
                <div class="form-input">
                    <label class="form-lb" for="phone">Phone</label>
                    <input type="text" class="form-txt" name="phone" id="" disabled value="{{user.trainer_phone}}" placeholder=" phone">
                </div>
                <div class="form-input">
                    <label class="form-lb" for="address">Address</label>
                    <input type="text" class="form-txt" name="" id="" disabled value="{{user.trainer_address}}" placeholder="address">
                </div>
                <div class="form-input">
                    <label class="form-lb" for="address">Password</label>
                    <input type="text" class="form-txt" name="password" id="" disabled value="" placeholder="Password">
                </div>
                <div class="fn-btn-container">
                    <i class="ti-check mg-r-5px"></i><input type="submit"  value="Finish" class="btn-finish">
                </div>
            </div>
        </form>
    </div>

{{/content}}
{{/extend}}
